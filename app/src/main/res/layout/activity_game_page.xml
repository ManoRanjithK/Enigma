<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.engima.mapps.enigma.GamePage"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="318dp"
        android:id="@+id/constraintLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintHorizontal_bias="1.0">

    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/n1"
        android:layout_width="71dp"
        android:layout_height="51dp"
        android:ems="10"
        android:maxLength="1"
        android:digits="123456789"
        android:inputType="number"
        tools:layout_editor_absoluteX="30dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.514" />

    <EditText
        android:id="@+id/n2"
        android:layout_width="66dp"
        android:layout_height="50dp"
        android:ems="10"
        android:digits="123456789"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintRight_toLeftOf="@+id/n3"
        app:layout_constraintLeft_toRightOf="@+id/n1"
        app:layout_constraintVertical_bias="0.516" />

    <EditText
        android:id="@+id/n3"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:digits="123456789"
        android:ems="10"
        android:maxLength="1"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.502"
        app:layout_constraintRight_toLeftOf="@+id/n4"
        app:layout_constraintLeft_toRightOf="@+id/n2" />

    <EditText
        android:id="@+id/n4"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:digits="123456789"
        android:ems="10"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.948" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="336dp"
        android:layout_height="69dp"
        android:text="Player 1 Set a four digit number"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintLeft_toRightOf="@+id/constraintLayout"
        app:layout_constraintRight_toLeftOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.765" />

    <Button
        android:id="@+id/go2"
        android:layout_width="107dp"
        android:layout_height="67dp"
        android:onClick="gotogamepage2"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.565" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />
</android.support.constraint.ConstraintLayout>
