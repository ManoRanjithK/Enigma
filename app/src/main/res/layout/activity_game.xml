<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.engima.mapps.enigma.game"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/s1"
        android:layout_width="63dp"
        android:layout_height="49dp"
        android:ems="10"
        android:maxLength="1"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1"
        app:layout_constraintVertical_bias="0.177"
        app:layout_constraintRight_toLeftOf="@+id/s2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/s2"
        android:layout_width="62dp"
        android:layout_height="52dp"
        android:ems="10"
        android:maxLength="1"
        android:inputType="number"
        app:layout_constraintRight_toLeftOf="@+id/s3"
        app:layout_constraintLeft_toRightOf="@+id/s1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1"
        app:layout_constraintVertical_bias="0.149" />

    <EditText
        android:id="@+id/s3"
        android:layout_width="63dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintRight_toLeftOf="@+id/s4"
        app:layout_constraintLeft_toRightOf="@+id/s2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2"
        app:layout_constraintVertical_bias="0.126" />

    <EditText
        android:id="@+id/s4"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/s3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2"
        app:layout_constraintVertical_bias="0.16" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:onClick="onclick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s2" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="189dp"
        android:layout_height="372dp"
        android:text="Player 1"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toLeftOf="@+id/player2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.092" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="197dp"
        android:layout_height="374dp"
        android:text="Player 2"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/player1" />

</android.support.constraint.ConstraintLayout>
